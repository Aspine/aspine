root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.{js,css,html},package.json}]
indent_style = space
indent_size = 2

[{serve.js,scrape.js,public/js/home.js,public/js/clock.js}]
indent_style = space
indent_size = 4

[*.bat]
end_of_line = crlf

[*.md]
indent_style = space
indent_size = 4
max_line_length = 80
